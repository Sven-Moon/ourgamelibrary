{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": ".",
    "paths": {
      "src/*": [
        "src/*"
      ],
      ":app/*": [
        "src/app/*"
      ],
      ":cmp/*": [
        "src/components/*"
      ],
      ":forms/*": [
        "src/components/Forms/*"
      ],
      ":pages/*": [
        "src/pages/*"
      ],
    },
    "composite": true,
    "moduleResolution": "bundler",
    "module": "preserve",
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "strictNullChecks": true,
    "strict": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts"
  ]
}